---
// Removemos framer-motion y react-icons
const contactInfo = [
  {
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" /></svg>`,
    title: 'Dirección',
    description: 'Av. Principal 1234, Ciudad, País',
    link: 'https://maps.google.com',
    linkText: 'Ver en el mapa'
  },
  {
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" /></svg>`,
    title: 'Teléfono',
    description: '+1 234 567 890',
    link: 'tel:+1234567890',
    linkText: 'Llamar ahora'
  },
  {
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" /><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" /></svg>`,
    title: 'Email',
    description: 'hola@vetcare.com',
    link: 'mailto:hola@vetcare.com',
    linkText: 'Enviar email'
  },
  {
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V6z" clip-rule="evenodd" /></svg>`,
    title: 'Horario',
    description: 'Lun-Vie: 9:00 - 20:00\nSáb: 9:00 - 14:00\nDom: Cerrado',
    link: '#',
    linkText: ''
  }
];
---

<section id="contacto" class="section-padding bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 animate-fade-in-up">
      <span class="inline-block px-4 py-1 rounded-full bg-indigo-100 text-indigo-600 text-sm font-medium mb-4">
        Contacto
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Pide tu cita hoy mismo
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Estamos aquí para ayudar a tu mascota a mantenerse saludable y feliz.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div
        class="space-y-8 animate-fade-in-left"
      >
        <h3 class="text-2xl font-semibold text-gray-900">Información de contacto</h3>
        <p class="text-gray-600">
          Estamos disponibles para responder a tus preguntas y atender a tus mascotas. No dudes en contactarnos a través de cualquiera de estos medios.
        </p>
        
        <div class="space-y-6">
          {contactInfo.map((item, index) => (
            <div class="flex animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-100 text-indigo-600">
                  <Fragment set:html={item.icon} />
                </div>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-medium text-gray-900">{item.title}</h4>
                <p class="text-gray-600 whitespace-pre-line">{item.description}</p>
                {item.linkText && (
                  <a 
                    href={item.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-indigo-600 hover:text-indigo-700 text-sm font-medium mt-1 inline-block"
                  >
                    {item.linkText}
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
        
        <div class="pt-4 animate-fade-in-up" style="animation-delay: 0.6s">
          <h4 class="text-lg font-medium text-gray-900 mb-4">Síguenos en redes sociales</h4>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
              <span class="sr-only">Facebook</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
              <span class="sr-only">Instagram</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.415-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.248-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.248 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
              <span class="sr-only">WhatsApp</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.498 14.382v3.3a1 1 0 01-1.5.865l-3.026-1.51a5 5 0 01-2.2-2.2l-1.51-3.025a1 1 0 01.865-1.5h3.3a1 1 0 011 .78 2.5 2.5 0 002.36 1.63 1 1 0 01.91.992z" />
                <path fill-rule="evenodd" d="M12 2a10 10 0 100 20 10 10 0 000-20zm0 18a8 8 0 110-16 8 8 0 010 16z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <div
        class="bg-white p-8 rounded-xl shadow-lg animate-fade-in-right"
      >
        <h3 class="text-2xl font-semibold text-gray-900 mb-6">Solicita una cita</h3>
        <form class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Nombre completo</label>
              <input type="text" name="name" id="name" autocomplete="name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input type="email" name="email" id="email" autocomplete="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
            </div>
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700">Teléfono</label>
            <input type="tel" name="phone" id="phone" autocomplete="tel" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
          </div>
          <div>
            <label for="pet" class="block text-sm font-medium text-gray-700">Mascota</label>
            <select id="pet" name="pet" class="mt-1 block w-full border border-gray-300 bg-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
              <option>Selecciona una opción</option>
              <option>Perro</option>
              <option>Gato</option>
              <option>Ave</option>
              <option>Roedor</option>
              <option>Reptil</option>
              <option>Otra</option>
            </select>
          </div>
          <div>
            <label for="service" class="block text-sm font-medium text-gray-700">Servicio</label>
            <select id="service" name="service" class="mt-1 block w-full border border-gray-300 bg-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
              <option>Selecciona un servicio</option>
              <option>Consulta general</option>
              <option>Vacunación</option>
              <option>Cirugía</option>
              <option>Peluquería</option>
              <option>Odontología</option>
              <option>Emergencia</option>
            </select>
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Mensaje</label>
            <textarea id="message" name="message" rows="4" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
          </div>
          <div>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 transform hover:scale-105">
              Enviar solicitud
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de entrada desde abajo */
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  /* Animación de entrada desde la izquierda */
  .animate-fade-in-left {
    animation: fadeInLeft 0.8s ease-out forwards;
  }
  
  /* Animación de entrada desde la derecha */
  .animate-fade-in-right {
    animation: fadeInRight 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
  
  /* Keyframes para las animaciones */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  /* Estilos para la sección */
  .section-padding {
    @apply py-20;
  }
</style>
